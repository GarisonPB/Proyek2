<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.MenuActivity"
    android:background="@drawable/sungai">

    <Button
        android:id="@+id/Sewa_Tenda"
        android:layout_width="186dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#FF5722"
        android:fontFamily="sans-serif-black"
        android:onClick="healderSewaTenda"
        android:text="Tenda"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.23" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2725061" />

    <Button
        android:id="@+id/Sewa_Carrier"
        android:layout_width="186dp"
        android:layout_height="39dp"
        android:layout_marginTop="40dp"
        android:background="#FF5722"
        android:fontFamily="sans-serif-black"
        android:onClick="healderSewaCarrier"
        android:text="Carrier"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/Sewa_Tenda" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.73" />

    <Button
        android:id="@+id/Sewa_Sleeping"
        android:layout_width="188dp"
        android:layout_height="41dp"
        android:layout_marginTop="40dp"
        android:background="#FF5722"
        android:fontFamily="sans-serif-black"
        android:onClick="healderSleepingBag"
        android:text="Sleeping Bag"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/Sewa_Carrier" />

    <Button
        android:id="@+id/button5"
        android:layout_width="190dp"
        android:layout_height="42dp"
        android:layout_marginTop="40dp"
        android:background="#FF5722"
        android:fontFamily="sans-serif-black"
        android:onClick="healderExit"
        android:text="EXIT"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/Sewa_Sleeping" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="132dp"
        android:layout_height="20dp"
        android:fontFamily="sans-serif-black"
        android:text="MENU BARANG"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

</androidx.constraintlayout.widget.ConstraintLayout>